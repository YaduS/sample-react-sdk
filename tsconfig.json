{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true, // Generate .d.ts files
    "outDir": "dist" // Output compiled files to dist folder
  },
  "include": [
    "src/**/*" // Include all files in the src directory
  ]
}
